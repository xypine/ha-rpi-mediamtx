{
  "name": "MediaMTX Add-on",
  "version": "v0.17.6",
  "slug": "mediamtx",
  "description": "Create RTSP server to broadcast streams, thanks to https://github.com/bluenviron/mediamtx",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
"boot": "auto",
  "legacy": true,
  "ports": {
    "8554/tcp": 8554,
    "1935/tcp": 1935
  },
  "startup": "application",
  "options": {
	  "MTX_PROTOCOLS": "tcp",
	  "MTX_PATHS_ALL_RUNONDEMAND": "echo 'incoming'",
	  "MTX_PATHS_ALL_RUNONDEMANDRESTART": "yes",
	  "MTX_PATHS_CAM_SOURCE": "rpiCamera"
  },
  "schema": {
	  "MTX_PROTOCOLS": "list(tcp)",
	  "MTX_PATHS_ALL_RUNONDEMAND": "list(echo 'incoming')",
	  "MTX_PATHS_ALL_RUNONDEMANDRESTART": "list(yes)",
	  "MTX_PATHS_CAM_SOURCE": "list(rpiCamera)"
  },
  "image": "bluenviron/mediamtx:latest-rpi"
}
